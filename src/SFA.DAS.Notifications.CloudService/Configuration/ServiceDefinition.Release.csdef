<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="SFA.DAS.Notifications.CloudService" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2015-04.2.6" upgradeDomainCount="5">
  <WebRole name="SFA.DAS.Notifications.Api" vmsize="Standard_D2_v2">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="HttpsIn" endpointName="HttpsIn" />
        </Bindings>
      </Site>
    </Sites>
    <ConfigurationSettings>
      <Setting name="EnvironmentName" />
      <Setting name="StorageConnectionString" />
      <Setting name="ConfigurationStorageConnectionString" />
      <Setting name="ApiTokenSecret" />
      <Setting name="ApiIssuer" />
      <Setting name="ApiAudiences" />
      <Setting name="LoggingRedisConnectionString"/>
      <Setting name="LoggingRedisKey"/>
      <Setting name="InstrumentationKey" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="HttpsIn" protocol="https" port="443" certificate="WebSslCert" loadBalancer="das-prd-noti-ilb"/>
    </Endpoints>
    <Certificates>
      <Certificate name="WebSslCert" storeLocation="LocalMachine" storeName="My" />
    </Certificates>
  </WebRole>
  <WorkerRole name="SFA.DAS.Notifications.MessageHandlers" vmsize="Standard_D1_v2">
    <ConfigurationSettings>
      <Setting name="EnvironmentName" />
      <Setting name="StorageConnectionString" />
      <Setting name="ConfigurationStorageConnectionString" />
      <Setting name="EmailServiceName" />
      <Setting name="LoggingRedisConnectionString"/>
      <Setting name="LoggingRedisKey"/>
      <Setting name="InstrumentationKey" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="Fake" protocol="tcp" port="50121" />
    </Endpoints>
  </WorkerRole>
</ServiceDefinition>