<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="SFA.DAS.Notifications.CloudService" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2015-04.2.6">
  <WebRole name="SFA.DAS.Notifications.Api" vmsize="Small">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <ConfigurationSettings>
      <Setting name="EnvironmentName" />
      <Setting name="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString" />
      <Setting name="StorageConnectionString" />
      <Setting name="ConfigurationStorageConnectionString" />
      <Setting name="EventHubConnectionString" />
      <Setting name="EventHubName" />
      <Setting name="ApiTokenSecret" />
      <Setting name="ApiIssuer" />
      <Setting name="ApiAudiences" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="10095" />
    </Endpoints>
  </WebRole>
  <WorkerRole name="SFA.DAS.Notifications.Worker" vmsize="Small">
    <ConfigurationSettings>
      <Setting name="EnvironmentName" />
      <Setting name="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString" />
      <Setting name="StorageConnectionString" />
      <Setting name="ConfigurationStorageConnectionString" />
      <Setting name="EventHubConnectionString" />
      <Setting name="EventHubName" />
      <Setting name="EmailServiceName" />
    </ConfigurationSettings>
  </WorkerRole>
</ServiceDefinition>